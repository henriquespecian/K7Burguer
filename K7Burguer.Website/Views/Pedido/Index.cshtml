@model K7Burguer.Website.Models.PedidoModel
@{
    ViewBag.Title = "Pedido";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="@Url.Content("~/Scripts/js/Pedido.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>


</head>
<body>

    <script>
        $(function () {
            carregarJs();            
        });
    </script>
    <div class="form-horizontal">


        <h3 class="page-header">Realizar Pedido</h3>


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formPedido", name = "formPedido" }))
{

            <div class="form-group">
                <label class="col-md-4 control-label" for="idHamburguer">Hambúrguer</label>
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.CodHamburguer, new System.Web.Mvc.SelectList(Model.ListaHamburguer, "Key", "Value"), "-- Selecione --", new { @class = "form-control" })
                </div>

                <div class="col-md-1">
                    @Html.TextBoxFor(model => model.QtdHamburguer, new { @class = "form-control", onkeyup = "somenteNumeros(this);" })
                </div>
            </div>


            <div class="form-group">
                <label class="col-md-4 control-label" for="idBebida">Bebida</label>
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.CodBebida, new System.Web.Mvc.SelectList(Model.ListaBebida, "Key", "Value"), "-- Selecione --", new { @class = "form-control", onchange = @"this.form.submit();" })
                </div>
                <div class="col-md-1">
                    @Html.TextBoxFor(model => model.QtdBebida, new { @class = "form-control", onkeyup = "somenteNumeros(this);" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label" for="idBatata">Batata</label>
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.CodBatata, new System.Web.Mvc.SelectList(Model.ListaBatata, "Key", "Value"), "-- Selecione --", new { @class = "form-control" })
                </div>
                <div class="col-md-1">
                    @Html.TextBoxFor(model => model.QtdBatata, new { @class = "form-control", onkeyup = "somenteNumeros(this);" })
                </div>
            </div>


            <div class="form-group">
                <label class="col-md-4 control-label" for="idConfirmar"></label>
                <div class="col-md-8">
                    <input type="submit" name="submit" id="submit" value="Confirmar" class="btn btn-info" />
                    @Html.ActionLink("Cancelar", "Index", "Pedido", null, new { @class = "btn btn-default" })

                </div>
            </div>
        }

    </div>
</body>
