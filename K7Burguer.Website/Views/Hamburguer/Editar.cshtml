@model K7Burguer.Website.Models.HamburguerModel
@{
    ViewBag.Title = "Novo";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskMoney.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/js/Hamburguer.js")" type="text/javascript"></script>



</head>
<body>
    <script>
        $(document).ready(function ($) {

            carregarJs();


            $("#Valor").maskMoney({
                symbol: 'R$ ',
                showSymbol: true, thousands: '.', decimal: ',', symbolStay: true
            });
        });

    </script>

    <div id="Editar" class="container-fluid">

        <h3 class="page-header">Editar</h3>

        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formEditar", name = "formEditar" }))
        {

            @Html.HiddenFor(h => h.CodHamburguer);
            <div class="row">
                <div class="form-group col-md-4">
                    <label for="exampleInputEmail1">Nome</label>
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", placeholder = "Digite o nome", required = "required" })
                </div>
                <div class="form-group col-md-4">
                    <label for="exampleInputEmail1">Ingredientes</label>
                    @Html.TextBoxFor(model => model.Ingredientes, new { @class = "form-control", placeholder = "Digite os ingredientes", required = "required" })
                </div>
                <div class="form-group col-md-4">
                    <label for="exampleInputEmail1">Valor</label>
                    @Html.TextBoxFor(model => model.Valor, new { @class = "form-control", placeholder = "Digite o valor", id = "Valor", required = "required" })
                </div>
            </div>
            <hr />

            <div class="row">
                <div class="col-md-12">
                    <input type="submit" name="submit" id="submit" value="Salvar" class="btn btn-info" />
                    @Html.ActionLink("Cancelar", "Index", "Hamburguer", null, new { @class = "btn btn-default" })
                </div>
            </div>

        }
    </div>

</body>
</html>